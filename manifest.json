{
    "manifest_version": 2,

    "name": "Work Mode",
    "description": "While in 'Work Mode', only relevant websites are whitelisted.",
    "version": "1",


    "background": {
        "scripts": ["js/background.js" , "js/jquery.min.js"]
    },

    "chrome_url_overrides":{
        "newtab" : "index.html"
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}